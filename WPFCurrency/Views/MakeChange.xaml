<UserControl x:Class="WPFCurrency.Views.MakeChange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCurrency.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label>Total Amount</Label>
            <TextBox x:Name="txtTotalAmount" Text="{Binding TotalAmount}" Margin="0,0,401,0"></TextBox>
            <Label>Coins in Repo</Label>
            <ListView Height="100" ItemsSource="{Binding Coins}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Save" Margin="0,0,650,0"/>
        </StackPanel>
    </Grid>
</UserControl>
