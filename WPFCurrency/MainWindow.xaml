        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCurrency"
        xmlns:views="clr-namespace:WPFCurrency.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid Height="116">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Repo UI" Click="Button_Click" Margin="10,26,10,54"/>
                <Button Content="Make Change" Margin="10,26,10,54" Grid.Column="1" Click="Button_Click_1"/>
            </Grid>

        </StackPanel>
    </Grid>
</Window>
